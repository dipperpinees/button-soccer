    <title>Remote</title>
</head>
<body>
    <div class="gamepad">
        <button id='up' class="bi-caret-up-fill"> </button>
        <button id='down' class="bi-caret-down-fill"> </button>
        <button id='right' class="bi-caret-right-fill"> </button>
        <button id='left' class="bi-caret-left-fill"> </button>
        <!-- <img src="" alt="avatar"> -->
    </div>
    <i class="bi bi-fullscreen fullscreen"></i>
    <div class="waiting">
        <div class="waiting-choose">
            <div class="waiting-choose-toggle">
            </div>
        </div>
        <i class="bi bi-link-45deg sharelink"></i>
        <button class="waiting-changeteam">Change Team</button>
        <button class="waiting-ready">Ready</button>
    </div>
</body>
