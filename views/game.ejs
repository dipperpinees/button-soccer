<!DOCTYPE html>
<html lang="en">
<%- include('./header.ejs', {title: "Button Soccer", description: "Funny soccer game play with your friends"}) %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <link rel="stylesheet" href="/styles/game.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body id='body'>
    <div class='wait'>
        <div class="game-settings">
            <i class="bi bi-gear-fill game-settings"></i>
            <div>
                <label for="graphics">Graphics</label>
                <select name="graphics" id="graphics" class="graphics">
                    <option value="0.2">Lowest Graphics</option>
                    <option value="0.5">Low Graphics</option>
                    <option value="0.6" selected>Medium Graphics</option>
                    <option value="0.8">High Graphics</option>
                    <option value="1">Higher Graphics</option>
                  </select>
            </div>
        </div>
        <div class='blueteam'>
            <h4>Blue Team</h4>
            <ul class="listplayer listplayer-blue">
            </ul>
        </div>
        <div class='settings'>
            <h3 class='settings-roomid'></h3>
            <div class="lastmatch">
                <h5>Last Match</h5>
                <div class="lastmatch-detail">
                    <div>
                        <h4 style="color: #0793d1">BLUE TEAM</h4>
                        <div class="lastmatch-detail-score blue-detail">
                        </div>
                    </div>
                    <p></p>
                    <div>
                        <h4 style="color: #ed1818">RED TEAM</h4>
                        <div class="lastmatch-detail-score red-detail">
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <ul class='settings-ball'>
                    <li class='ball-choose' src="/img/ball1.png">
                        <img src="/img/ball1.png" alt="">
                    </li>
                    <li src="/img/ball2.png">
                        <img src="/img/ball2.png" alt="">
                    </li>
                    <li src="/img/ball3.png">
                        <img src="/img/ball3.png" alt="">
                    </li>
                    <li src="/img/ball4.png">
                        <img src="/img/ball4.png" alt="">
                    </li>
                    <li src="/img/ball5.png">
                        <img src="/img/ball5.png" alt="">
                    </li>
                    <li src="/img/ball6.png">
                        <img src="/img/ball6.png" alt="">
                    </li>
                    <li src="/img/ball7.png">
                        <img src="/img/ball7.png" alt="">
                    </li>
                </ul>
                <ul class='settings-time'>
                    <li time="0.5">3m</li>
                    <li class='time-choose' time="6">6m</li>
                    <li time="8">8m</li>
                    <li time="10">10m</li>
                    <li time="15">15m</li>
                </ul>
                <button class='settings-start'>START</button>
            </div>
        </div>
        <div class='redteam'>
            <h4>Red Team</h4>
            <ul class="listplayer listplayer-red">
            </ul>
        </div>
    </div>
</body>
<script src="https://unpkg.com/kaboom/dist/kaboom.js"></script>
<script src="https://cdn.socket.io/4.4.0/socket.io.min.js" integrity="sha384-1fOn6VtTq3PWwfsOrk45LnYcGosJwzMHv+Xh/Jx5303FVOXzEnw0EpLv30mtjmlj" crossorigin="anonymous"></script>
<script src="/js/constant.js"></script>
<script src="/js/ball.js"></script>
<script src="/js/player.js"></script>
<script src="/js/scoreboard.js"></script>
<script src="/js/stadium.js"></script>
<script src="/js/goal.js"></script>
<script src="/js/sound.js"></script>
<script src="/js/soccergame.js"></script>
<script src="/js/game.js"></script>
</html>